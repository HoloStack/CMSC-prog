@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container-fluid fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title">Lecturer Dashboard</h1>
            <p class="lead text-muted">Welcome back, John Lecturer! Here's your claim overview for this month.</p>
        </div>
    </div>

    <!-- Metrics Cards -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="metric-card total">
                <div class="metric-number">3</div>
                <h5>Total Claims</h5>
                <p class="text-muted mb-0">This month</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="metric-card pending">
                <div class="metric-number">1</div>
                <h5>Pending Review</h5>
                <p class="text-muted mb-0">Awaiting approval</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="metric-card approved">
                <div class="metric-number">R42,870</div>
                <h5>Total Earnings</h5>
                <p class="text-muted mb-0">This month</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-lg-6 mb-4">
            <div class="dashboard-card">
                <h4><i class="fas fa-plus-circle text-primary me-2"></i>Quick Actions</h4>
                <p class="text-muted mb-4">Submit a new claim or manage existing ones</p>
                
                <div class="d-grid gap-3">
                    <button class="btn btn-primary btn-lg">
                        <i class="fas fa-file-plus me-2"></i>
                        Submit New Claim
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-upload me-2"></i>
                        Upload Supporting Documents
                    </button>
                </div>
            </div>
        </div>

        <!-- Recent Claims -->
        <div class="col-lg-6 mb-4">
            <div class="dashboard-card">
                <h4><i class="fas fa-history text-info me-2"></i>Recent Claims</h4>
                <p class="text-muted mb-4">Your latest claim submissions</p>
                
                <div class="claim-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">August 2025 Claim</h6>
                            <small class="text-muted">45 hours × R350/hr</small>
                        </div>
                        <div class="text-end">
                            <div class="status-badge status-pending">Pending</div>
                            <div class="text-success fw-bold">R15,750</div>
                        </div>
                    </div>
                </div>
                
                <div class="claim-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">July 2025 Claim</h6>
                            <small class="text-muted">38 hours × R320/hr</small>
                        </div>
                        <div class="text-end">
                            <div class="status-badge status-approved">Approved</div>
                            <div class="text-success fw-bold">R12,160</div>
                        </div>
                    </div>
                </div>
                
                <div class="claim-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">June 2025 Claim</h6>
                            <small class="text-muted">42 hours × R380/hr</small>
                        </div>
                        <div class="text-end">
                            <div class="status-badge status-approved">Approved</div>
                            <div class="text-success fw-bold">R15,960</div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <button class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i> View All Claims
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Claim Submission Form -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="dashboard-card">
                <h4><i class="fas fa-file-invoice me-2"></i>Submit New Claim</h4>
                <p class="text-muted mb-4">Fill out the form below to submit your monthly claim</p>
                
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Month Worked</label>
                            <input type="month" class="form-control" value="2025-09" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Department</label>
                            <select class="form-control">
                                <option>Information Technology</option>
                                <option>Business Studies</option>
                                <option>Engineering</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold">Hours Worked</label>
                            <input type="number" class="form-control" placeholder="45" min="1" max="200" required>
                            <div class="form-text">Maximum 200 hours per month</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold">Hourly Rate (R)</label>
                            <input type="number" class="form-control" placeholder="350" min="100" max="1000" required>
                            <div class="form-text">As per your contract</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold">Total Amount</label>
                            <input type="text" class="form-control" value="R15,750" readonly>
                            <div class="form-text">Automatically calculated</div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Additional Notes</label>
                        <textarea class="form-control" rows="3" placeholder="Provide any additional information about your work this month..."></textarea>
                    </div>
                    
                    <!-- File Upload Section -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Supporting Documents</label>
                        <div class="file-upload-area">
                            <i class="fas fa-cloud-upload-alt fa-3x text-primary mb-3"></i>
                            <h5>Upload Supporting Documents</h5>
                            <p class="text-muted mb-3">Drag and drop your files here or click to browse</p>
                            <button type="button" class="btn btn-outline-primary">
                                <i class="fas fa-folder-open me-1"></i> Choose Files
                            </button>
                            <div class="form-text mt-2">Supported formats: PDF, DOC, DOCX, XLS, XLSX (Max 10MB each)</div>
                        </div>
                        
                        <!-- Uploaded Files Display -->
                        <div class="mt-3">
                            <div class="alert alert-success d-flex align-items-center">
                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                <span>timesheet_august_2025.pdf</span>
                                <button class="btn btn-sm btn-outline-danger ms-auto">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="alert alert-success d-flex align-items-center">
                                <i class="fas fa-file-excel text-success me-2"></i>
                                <span>lecture_schedule.xlsx</span>
                                <button class="btn btn-sm btn-outline-danger ms-auto">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-success btn-lg px-5">
                            <i class="fas fa-paper-plane me-2"></i>
                            Submit Claim
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-save me-2"></i>
                            Save Draft
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>