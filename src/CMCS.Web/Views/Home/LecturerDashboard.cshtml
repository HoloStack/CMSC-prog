@{
    ViewData["Title"] = "Lecturer Dashboard";
    Layout = "_SimpleLayout";
}

<link rel="stylesheet" href="~/css/simple.css" />

<div class="main-container">
    <div class="header">
        <h1>Lecturer Dashboard</h1>
        <p>Submit and Manage Your Monthly Claims</p>
    </div>

    <!-- Quick Stats -->
    <div class="stats">
        <div class="stat-box">
            <div class="stat-number">3</div>
            <div>Total Claims</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">1</div>
            <div>Pending</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">R15,750</div>
            <div>This Month</div>
        </div>
    </div>

    <!-- Submit New Claim -->
    <div class="box">
        <div class="box-title">Submit New Monthly Claim</div>
        
        <form>
            <div class="form-row">
                <span class="label">Month:</span>
                <input type="month" value="2025-09" required />
            </div>
            
            <div class="form-row">
                <span class="label">Department:</span>
                <select>
                    <option>Information Technology</option>
                    <option>Business Studies</option>
                    <option>Engineering</option>
                </select>
            </div>
            
            <div class="form-row">
                <span class="label">Hours Worked:</span>
                <input type="number" placeholder="45" min="1" max="200" required />
                <small>(Max 200 hours per month)</small>
            </div>
            
            <div class="form-row">
                <span class="label">Hourly Rate (R):</span>
                <input type="number" placeholder="350" min="100" max="1000" required />
                <small>(As per contract)</small>
            </div>
            
            <div class="form-row">
                <span class="label">Total Amount:</span>
                <input type="text" value="R15,750" readonly />
                <small>(Automatically calculated)</small>
            </div>
            
            <div class="form-row">
                <span class="label">Additional Notes:</span>
                <textarea placeholder="Any additional information about your work this month..."></textarea>
            </div>
            
            <div class="file-upload">
                <p>Upload Supporting Documents</p>
                <input type="file" multiple />
                <br /><small>Supported: PDF, DOC, DOCX, XLS, XLSX (Max 10MB each)</small>
            </div>
            
            <div class="form-row">
                <button type="submit" class="btn btn-green">Submit Claim</button>
                <button type="button" class="btn">Save Draft</button>
            <a href="@Url.Action("Login", "Home")" class="btn">Back to Login</a>
            </div>
        </form>
    </div>

    <!-- Recent Claims -->
    <div class="box">
        <div class="box-title">Your Recent Claims</div>
        
        <table>
            <tr>
                <th>Month</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <tr>
                <td>August 2025</td>
                <td>45</td>
                <td>R350</td>
                <td>R15,750</td>
                <td><span class="status-pending">PENDING</span></td>
                <td><button class="btn">View Details</button></td>
            </tr>
            <tr>
                <td>July 2025</td>
                <td>38</td>
                <td>R320</td>
                <td>R12,160</td>
                <td><span class="status-approved">APPROVED</span></td>
                <td><button class="btn">View Details</button></td>
            </tr>
            <tr>
                <td>June 2025</td>
                <td>42</td>
                <td>R380</td>
                <td>R15,960</td>
                <td><span class="status-approved">APPROVED</span></td>
                <td><button class="btn">View Details</button></td>
            </tr>
        </table>
    </div>
</div>