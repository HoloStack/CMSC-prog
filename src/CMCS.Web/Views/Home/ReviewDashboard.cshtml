@{
    ViewData["Title"] = "Claims Review";
}

<div class="container-fluid fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title">Claims Review Dashboard</h1>
            <p class="lead text-muted">Welcome, Programme Coordinator! Review and approve pending claims below.</p>
        </div>
    </div>

    <!-- Review Metrics -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="metric-card pending">
                <div class="metric-number">12</div>
                <h5>Pending Claims</h5>
                <p class="text-muted mb-0">Awaiting review</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card approved">
                <div class="metric-number">45</div>
                <h5>Approved Today</h5>
                <p class="text-muted mb-0">This month</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card total">
                <div class="metric-number">R2.1M</div>
                <h5>Total Approved</h5>
                <p class="text-muted mb-0">This month</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card">
                <div class="metric-number">3.2</div>
                <h5>Avg Review Time</h5>
                <p class="text-muted mb-0">Days</p>
            </div>
        </div>
    </div>

    <!-- Filter and Search -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Search by lecturer name, ID, or claim number...">
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-control">
                <option>All Departments</option>
                <option>Information Technology</option>
                <option>Business Studies</option>
                <option>Engineering</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-control">
                <option>All Statuses</option>
                <option>Pending</option>
                <option>Under Review</option>
                <option>Approved</option>
                <option>Rejected</option>
            </select>
        </div>
    </div>

    <!-- Claims List -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4><i class="fas fa-clipboard-list text-warning me-2"></i>Pending Claims Review</h4>
                    <div>
                        <button class="btn btn-success me-2">
                            <i class="fas fa-check-double me-1"></i> Bulk Approve
                        </button>
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-download me-1"></i> Export
                        </button>
                    </div>
                </div>
                
                <!-- Claim Review Items -->
                <div class="claim-review-item mb-4 p-4 border rounded-3">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <div class="d-flex align-items-center">
                                <input type="checkbox" class="form-check-input me-3" id="claim1">
                                <div>
                                    <h6 class="mb-0">Claim #2025-001</h6>
                                    <small class="text-muted">Sept 2025</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle me-3">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">John Lecturer</h6>
                                    <small class="text-muted">LEC001 • IT Department</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-center">
                            <div class="fw-bold text-primary">45 hours</div>
                            <small class="text-muted">@ R350/hr</small>
                        </div>
                        <div class="col-md-2 text-center">
                            <div class="fw-bold text-success fs-5">R15,750</div>
                            <div class="status-badge status-pending">Pending</div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> View
                                </button>
                                <button class="btn btn-sm btn-success">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="claim-review-item mb-4 p-4 border rounded-3">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <div class="d-flex align-items-center">
                                <input type="checkbox" class="form-check-input me-3" id="claim2">
                                <div>
                                    <h6 class="mb-0">Claim #2025-002</h6>
                                    <small class="text-muted">Sept 2025</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle me-3">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Sarah Professor</h6>
                                    <small class="text-muted">LEC002 • Business Studies</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-center">
                            <div class="fw-bold text-primary">38 hours</div>
                            <small class="text-muted">@ R320/hr</small>
                        </div>
                        <div class="col-md-2 text-center">
                            <div class="fw-bold text-success fs-5">R12,160</div>
                            <div class="status-badge status-pending">Pending</div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> View
                                </button>
                                <button class="btn btn-sm btn-success">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center">
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>