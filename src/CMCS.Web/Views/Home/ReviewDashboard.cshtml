@{
    ViewData["Title"] = "Review Dashboard";
    Layout = "_SimpleLayout";
}

<link rel="stylesheet" href="~/css/simple.css" />

<div class="main-container">
    <div class="header">
        <h1>Claims Review Dashboard</h1>
        <p>Programme Coordinator & Academic Manager Portal</p>
    </div>

    <!-- Review Stats -->
    <div class="stats">
        <div class="stat-box">
            <div class="stat-number">12</div>
            <div>Pending Claims</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">45</div>
            <div>Approved Today</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">R2.1M</div>
            <div>Total This Month</div>
        </div>
    </div>

    <!-- Pending Claims for Review -->
    <div class="box">
        <div class="box-title">Pending Claims - Awaiting Your Review</div>
        
        <table>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Department</th>
                <th>Month</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>CLAIM-2025-001</td>
                <td>John Lecturer</td>
                <td>Information Technology</td>
                <td>September 2025</td>
                <td>45</td>
                <td>R350/hr</td>
                <td><strong>R15,750</strong></td>
                <td><span class="status-pending">PENDING</span></td>
                <td>
                    <button class="btn btn-green">Approve</button>
                    <button class="btn btn-red">Reject</button>
                    <button class="btn">View Details</button>
                </td>
            </tr>
            <tr>
                <td>CLAIM-2025-002</td>
                <td>Sarah Professor</td>
                <td>Business Studies</td>
                <td>September 2025</td>
                <td>38</td>
                <td>R320/hr</td>
                <td><strong>R12,160</strong></td>
                <td><span class="status-pending">PENDING</span></td>
                <td>
                    <button class="btn btn-green">Approve</button>
                    <button class="btn btn-red">Reject</button>
                    <button class="btn">View Details</button>
                </td>
            </tr>
            <tr>
                <td>CLAIM-2025-003</td>
                <td>Mike Engineer</td>
                <td>Engineering</td>
                <td>September 2025</td>
                <td>42</td>
                <td>R380/hr</td>
                <td><strong>R15,960</strong></td>
                <td><span class="status-pending">PENDING</span></td>
                <td>
                    <button class="btn btn-green">Approve</button>
                    <button class="btn btn-red">Reject</button>
                    <button class="btn">View Details</button>
                </td>
            </tr>
            <tr>
                <td>CLAIM-2025-004</td>
                <td>Lisa Academic</td>
                <td>Information Technology</td>
                <td>September 2025</td>
                <td>50</td>
                <td>R400/hr</td>
                <td><strong>R20,000</strong></td>
                <td><span class="status-pending">PENDING</span></td>
                <td>
                    <button class="btn btn-green">Approve</button>
                    <button class="btn btn-red">Reject</button>
                    <button class="btn">View Details</button>
                </td>
            </tr>
        </table>
        
        <div class="form-row">
            <button class="btn btn-green">Approve All Selected</button>
            <button class="btn btn-red">Reject All Selected</button>
            <button class="btn">Export Report</button>
        </div>
    </div>

    <!-- Recently Reviewed Claims -->
    <div class="box">
        <div class="box-title">Recently Reviewed Claims</div>
        
        <table>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Amount</th>
                <th>Review Date</th>
                <th>Status</th>
                <th>Reviewed By</th>
            </tr>
