                <td>CLAIM-2025-045</td>
                <td>David Teacher</td>
                <td>R14,200</td>
                <td>2025-09-16</td>
                <td><span class="status-approved">APPROVED</span></td>
                <td>Coord. Smith</td>
            </tr>
            <tr>
                <td>CLAIM-2025-044</td>
                <td>Emma Lecturer</td>
                <td>R18,900</td>
                <td>2025-09-16</td>
                <td><span class="status-approved">APPROVED</span></td>
                <td>Manager Jones</td>
            </tr>
            <tr>
                <td>CLAIM-2025-043</td>
                <td>Tom Professor</td>
                <td>R22,500</td>
                <td>2025-09-15</td>
                <td><span class="status-rejected">REJECTED</span></td>
                <td>Coord. Brown</td>
            </tr>
        </table>
    </div>

    <!-- Quick Actions -->
    <div class="box">
        <div class="box-title">Quick Actions</div>
        <p>Common review tasks:</p>
        
        <div class="form-row">
            <button class="btn">View All Pending Claims</button>
            <button class="btn btn-orange">Generate Monthly Report</button>
            <button class="btn">Download Claim Data</button>
            <a href="@Url.Action("Login", "Home")" class="btn">Back to Login</a>
        </div>
        
        <div class="form-row">
            <span class="label">Filter by Department:</span>
            <select>
                <option>All Departments</option>
                <option>Information Technology</option>
                <option>Business Studies</option>
                <option>Engineering</option>
            </select>
            
            <span class="label">Filter by Status:</span>
            <select>
                <option>Pending Only</option>
                <option>All Statuses</option>
                <option>Approved</option>
                <option>Rejected</option>
            </select>
            
            <button class="btn">Apply Filters</button>
        </div>
    </div>
</div>