@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">Contract Monthly Claim System</h1>
                <p class="lead mb-4">
                    Streamline your monthly claim submissions and approvals with CMCS. 
                    Designed for Independent Contractor lecturers, Programme Coordinators, and Academic Managers.
                </p>
                <div class="d-flex gap-3 mb-4">
                    <div class="feature-highlight">
                        <i class="fas fa-file-invoice text-primary me-2"></i>
                        <span>Easy Claim Submission</span>
                    </div>
                    <div class="feature-highlight">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>Transparent Approval</span>
                    </div>
                    <div class="feature-highlight">
                        <i class="fas fa-chart-line text-info me-2"></i>
                        <span>Real-time Tracking</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="system-graphic">
                    <i class="fas fa-university fa-5x text-primary mb-3"></i>
                    <h5>The IIE Contract System</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">Access Your Dashboard</h2>
            <p class="text-muted mb-5">Select your role to access the appropriate interface</p>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Lecturer Access -->
        <div class="col-lg-4">
            <div class="role-card lecturer-card">
                <div class="card-icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <h4>Independent Contractor Lecturer</h4>
                <p class="text-muted">Submit monthly claims, upload supporting documents, and track approval status.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check text-success me-2"></i>Submit monthly claims</li>
                    <li><i class="fas fa-check text-success me-2"></i>Calculate hours Ã— hourly rate</li>
                    <li><i class="fas fa-check text-success me-2"></i>Upload supporting documents</li>
                    <li><i class="fas fa-check text-success me-2"></i>Track claim status</li>
                </ul>
                <a href="@Url.Action("LecturerDashboard", "Home")" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-sign-in-alt me-2"></i>Access Lecturer Dashboard
                </a>
            </div>
        </div>
        
        <!-- Programme Coordinator Access -->
        <div class="col-lg-4">
            <div class="role-card coordinator-card">
                <div class="card-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <h4>Programme Coordinator</h4>
                <p class="text-muted">Review and verify submitted claims from lecturers in your programme.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check text-success me-2"></i>Review pending claims</li>
                    <li><i class="fas fa-check text-success me-2"></i>Verify hours and rates</li>
                    <li><i class="fas fa-check text-success me-2"></i>Approve or reject claims</li>
                    <li><i class="fas fa-check text-success me-2"></i>View supporting documents</li>
                </ul>
                <a href="@Url.Action("ReviewDashboard", "Home")" class="btn btn-warning btn-lg w-100">
                    <i class="fas fa-clipboard-check me-2"></i>Access Coordinator Portal
                </a>
            </div>
        </div>
        
        <!-- Academic Manager Access -->
        <div class="col-lg-4">
            <div class="role-card manager-card">
                <div class="card-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <h4>Academic Manager</h4>
                <p class="text-muted">Final approval of claims and oversight of the entire approval process.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check text-success me-2"></i>Final claim approval</li>
                    <li><i class="fas fa-check text-success me-2"></i>System oversight</li>
                    <li><i class="fas fa-check text-success me-2"></i>Generate reports</li>
                    <li><i class="fas fa-check text-success me-2"></i>Manage claim workflows</li>
                </ul>
                <a href="@Url.Action("ClaimDetails", "Home")" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-cog me-2"></i>Access Manager Portal
                </a>
            </div>
        </div>
    </div>
    
    <!-- System Features Overview -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="system-overview">
                <h3 class="text-center mb-4">System Features & Benefits</h3>
                <div class="row g-4">
                    <div class="col-md-3 text-center">
                        <div class="feature-box">
                            <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                            <h5>Real-time Processing</h5>
                            <p class="text-muted">Claims are processed instantly with automatic calculations and status updates.</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="feature-box">
                            <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                            <h5>Secure Document Storage</h5>
                            <p class="text-muted">Supporting documents are safely stored and linked to corresponding claims.</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="feature-box">
                            <i class="fas fa-route fa-3x text-info mb-3"></i>
                            <h5>Transparent Workflow</h5>
                            <p class="text-muted">Track your claim through every step of the approval process.</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="feature-box">
                            <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                            <h5>Comprehensive Reports</h5>
                            <p class="text-muted">Generate detailed reports for administrative and accounting purposes.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
